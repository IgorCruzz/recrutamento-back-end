{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "target": "es2019",
        "esModuleInterop": true,
        "experimentalDecorators":true,
        "emitDecoratorMetadata": true,
        "allowJs": true,
        "sourceMap": true,
        "rootDir": "src",
        "baseUrl": "src",
        "paths": {
          "@/*": ["*"]
        }
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules",
      "typings"
    ]
}
